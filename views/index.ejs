<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <title>CRUD FROM API</title>

    <link href="/style.css" rel="stylesheet">
  </head>


  <body>
    
    <nav class="navbar navbar-dark bg-mynav">
      <div class="container-fluid">
        <a class="navbar-brand" href="/allUsers">My App</a>
      </div>
    </nav>




    <div class="container">

      <div class="d-flex bd-highlight mb-3">
        <div class="me-auto p-2 bd-highlight"><h2>Friends</div>
        <div class="p-2 bd-highlight">
          <button type="button" class="btn btn-secondary"><a style="color: rgb(255, 255, 255);" href="/create">Add New Friend</a></button>
        </div>
      </div>
      



      <div class="table-responsive">

        <table class="table">

          <thead>
            <tr>
              <th scope="col">Avatar</th>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Action</th>
            </tr>
          </thead>

          <tbody id="mytable">

            <% if (users.length>0) { %>
              <% users.forEach(user => { %>
                <tr>
                  <td>
                    <img width="50px" src="/uploads/images/<%=user.image%>" class="avatar">
                  </td>
                  <td><%=user.firstName%></td>
                  <td><%=user.lastName%></td>
                  <td>
                      <a href="/details/<%=user._id%>">
                        <button type="button" id="infos" class="btn btn-info">More Infos</button> 
                      </a>
                  </td>
              </tr>
              <% }) %>
            <% } else { %>
              <td colspan="6">No Users Found in the Data base</td>
            <% } %>   
          </tbody>

        </table>

      </div>


    </div>

    

    <script src="index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.16/dist/sweetalert2.all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
  </body>
</html>