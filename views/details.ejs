<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <title>CRUD FROM API</title>

    <link href="/style.css" rel="stylesheet">
  </head>


  <body>
    
    <nav class="navbar navbar-dark bg-mynav">
      <div class="container-fluid">
        <a class="navbar-brand" href="/allUsers">My App</a>
      </div>
    </nav>




    <div class="container">

      <div class="d-flex bd-highlight mb-3">
        <div class="me-auto p-2 bd-highlight"><h2>Friend Details</div>
        <div class="p-2 bd-highlight">
          <button type="button" class="btn btn-secondary"><a style="color: rgb(255, 255, 255);"  href="/create">Add New Friend</a></button>
          <button type="button" class="btn btn-secondary"><a style="color: rgb(255, 255, 255);"  href="/allUsers">Go Back to All Friends</a></button>
        </div>
      </div>
      



      <div class="table-responsive">

        <table class="table">

          <thead>
            <tr>
              <th scope="col">Avatar</th>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Date of Birth</th>
              <th scope="col">Email</th>
              <th scope="col">Phone Number</th>
              <th scope="col">Adresse</th>
              <th scope="col">Action</th>
            </tr>
          </thead>

          <tbody id="mytable">
                <tr>
                    <td>
                        <img width="50px" src="/uploads/images/<%=user.image%>" class="avatar">
                    </td>
                    <td><%=user.firstName%></td>
                    <td><%=user.lastName%></td>
                    <td><%=user.dateOfBirth%></td>
                    <td><%=user.email%></td>
                    <td><%=user.phone%></td>
                    <td><%=user.adresse%></td>


                </tr>
          </tbody>

        </table>

      </div>


    </div>

    <script>
        const btnDelete = document.querySelector("#delete");
        btnDelete.addEventListener("click",(e)=>{
          fetch(`/details/${btnDelete.dataset.doc}`,{method:'DELETE'})
          .then(result=> result.json() )
          .then(data=> window.location.href = data.redirect)
          .catch(error=> console.log(error))
        })
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
  </body>
</html>